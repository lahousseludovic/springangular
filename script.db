drop table if exists personne;
drop table if exists niveau_etude;

CREATE TABLE niveau_etude (
    id SERIAL,
    libelle TEXT NOT NULL,
    PRIMARY KEY(id)
);

CREATE TABLE personne (
    id SERIAL,
    nom TEXT NOT NULL,
    prenom TEXT NOT NULL,
    age int NOT NULL,
    id_niveau Integer,
    PRIMARY KEY(id),
    FOREIGN KEY(id_niveau) REFERENCES niveau_etude(id) on delete cascade
);

